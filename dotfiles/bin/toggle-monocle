#!/usr/bin/env sh

MONOCLE_MODE=$(hyprctl getoption misc:new_window_takes_over_fullscreen | awk 'NR==1{print $2}')
if [ "$MONOCLE_MODE" = 0 ] ; then
    hyprctl --batch "\
        keyword misc:new_window_takes_over_fullscreen 1;\
        keyword misc:exit_window_retains_fullscreen 1"
    exit
fi
hyprctl reload
